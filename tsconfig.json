{
    "compilerOptions": {
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "declaration": true,
        "strict": true,
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [
            "ES6",
            "ES2019",
            "ES2017",
            "ES2020"
        ]
    },
    
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}