{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "1.1.2",
    "npmClient": "npm",
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "registry": "https://registry.npmjs.org/",
            "npmClient": "npm",
            "ignoreChanges": ["**/package.json", "**/tsconfig.json", "**/README.md"],
            "yes": true
        },
        "version": {
            "message": "chore(release): new version %s",
            "npmClient": "npm",
            "exact": true,
            "allowBranch": "*"
        },
        "bootstrap": {
            "logLevel": "info"
        }
    }
}
